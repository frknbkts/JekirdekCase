@page
@model JekirdekCase.Pages.Admin.UserCreateModel
@{
    ViewData["Title"] = "Yeni Sistem Kullanıcısı Ekle";
}

<h1>@ViewData["Title"]</h1>
<p>Bu sayfadan sisteme yeni kullanıcılar (Admin veya User rolünde) ekleyebilirsiniz.</p>
<hr />

<div class="row">
    <div class="col-md-6">
        <form method="post">
            @if (!string.IsNullOrEmpty(Model.ResultMessage))
            {
                var alertClass = Model.IsSuccess ? "alert-success" : "alert-danger";
                <div class="alert @alertClass" role="alert">
                    @Model.ResultMessage
                </div>
            }
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="NewUser.Username" class="form-control" placeholder="Kullanıcı Adı" />
                <label asp-for="NewUser.Username"></label>
                <span asp-validation-for="NewUser.Username" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="NewUser.Email" class="form-control" placeholder="E-posta Adresi" />
                <label asp-for="NewUser.Email"></label>
                <span asp-validation-for="NewUser.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="NewUser.Password" type="password" class="form-control" placeholder="Şifre" />
                <label asp-for="NewUser.Password"></label>
                <span asp-validation-for="NewUser.Password" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="NewUser.Role" class="form-control" placeholder="Rol (Örn: Admin, User)" />
                <label asp-for="NewUser.Role">Rol</label>
                <span asp-validation-for="NewUser.Role" class="text-danger"></span>
                <div class="form-text">Geçerli roller "Admin" veya "User" olabilir.</div>
            </div>

            <button type="submit" class="btn btn-primary">Kullanıcıyı Oluştur</button>
            <a asp-page="/Index" class="btn btn-secondary ms-2">İptal</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}